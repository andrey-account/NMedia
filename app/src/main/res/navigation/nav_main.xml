<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_main"
        app:startDestination="@id/greetingFragment">

    <fragment
            android:id="@+id/greetingFragment"
            android:name="ru.netology.nmedia.ui.auth.GreetingFragment"
            tools:layout="@layout/fragment_greeting">
        <action
                android:id="@+id/action_greetingFragment_to_feedFragment"
                app:destination="@id/feedFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@id/nav_main"/>
        <action
                android:id="@+id/action_greetingFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_greetingFragment_to_registerFragment"
                app:destination="@id/registerFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
            android:id="@+id/feedFragment"
            android:name="ru.netology.nmedia.ui.feed.FeedFragment"
            tools:layout="@layout/fragment_feed">
        <action
                android:id="@+id/action_feedFragment_to_newPostFragment"
                app:destination="@id/newPostFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_newEventFragment"
                app:destination="@id/newEventFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_registerFragment"
                app:destination="@id/registerFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_greetingFragment"
                app:destination="@id/greetingFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_userFragment"
                app:destination="@id/userFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_mapFragment"
                app:destination="@id/mapFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_videoFragment"
                app:destination="@id/videoFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_imageFragment"
                app:destination="@id/imageFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_feedFragment_to_signInDialog"
                app:destination="@id/sinInDialog"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
            android:id="@+id/newPostFragment"
            android:name="ru.netology.nmedia.ui.feed.NewPostFragment"
            tools:layout="@layout/fragment_new_post">
        <action
                android:id="@+id/action_newPostFragment_to_mapFragment"
                app:destination="@+id/mapFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
            android:id="@+id/newEventFragment"
            android:name="ru.netology.nmedia.ui.feed.NewEventFragment"
            tools:layout="@layout/fragment_new_post">
        <action
                android:id="@+id/action_newEventFragment_to_mapFragment"
                app:destination="@+id/mapFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
            android:id="@+id/loginFragment"
            android:name="ru.netology.nmedia.ui.auth.LoginFragment"
            tools:layout="@layout/fragment_login"
            android:label="@string/sign_in" />

    <fragment
            android:id="@+id/registerFragment"
            android:name="ru.netology.nmedia.ui.auth.RegistrationFragment"
            tools:layout="@layout/fragment_registration"
            android:label="@string/sign_in" />

    <fragment
            android:id="@+id/userFragment"
            android:name="ru.netology.nmedia.ui.profile.UserFragment"
            android:label="@string/user"
            tools:layout="@layout/fragment_user">

        <action
                android:id="@+id/action_userFragment_to_jobsFragment"
                app:destination="@id/jobsFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_userFragment_to_mapFragment"
                app:destination="@id/mapFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_userFragment_to_videoFragment"
                app:destination="@id/videoFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_userFragment_to_imageFragment"
                app:destination="@id/imageFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
                android:id="@+id/action_userFragment_to_newPostFragment"
                app:destination="@id/newPostFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
            android:id="@+id/jobsFragment"
            android:name="ru.netology.nmedia.ui.profile.JobsFragment"
            android:label="@string/jobs"
            tools:layout="@layout/fragment_jobs">

        <action
                android:id="@+id/action_jobsFragment_to_newJobFragment"
                app:destination="@id/newJobFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
            android:id="@+id/newJobFragment"
            android:name="ru.netology.nmedia.ui.profile.NewJobFragment"
            tools:layout="@layout/fragment_new_job" />

    <!-- ДОБАВИТЬ КАРТЫ И ВСЁ ЧТО С НИМИ СВЯЗАНО!
    <fragment
            android:id="@+id/mapFragment"
            android:name="ru.netology.nmedia.ui.map.MapFragment"
            tools:layout="@layout/fragment_map" />
-->

    <fragment
            android:id="@+id/videoFragment"
            android:name="ru.netology.nmedia.ui.attachment.VideoFragment"
            tools:layout="@layout/fragment_video" />

    <fragment
            android:id="@+id/imageFragment"
            android:name="ru.netology.nmedia.ui.attachment.ImageFragment"
            tools:layout="@layout/fragment_image" />

    <dialog
            android:id="@+id/sinInDialog"
            android:name="ru.netology.nmedia.dialog.SignInDialog">
        <action
                android:id="@+id/action_sigInDialog_to_loginFragment"
                app:destination="@id/loginFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </dialog>


</navigation>